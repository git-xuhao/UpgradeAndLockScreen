<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rel_rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:background="@mipmap/bg">
        <ImageView
            android:id="@+id/to_right_rotate"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="120dp"
            android:layout_marginStart="65dp"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/small_gear" />

        <ImageView
            android:id="@+id/to_left_rotate"
            android:layout_toRightOf="@id/to_right_rotate"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="90dp"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@mipmap/big_gear" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="66dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_rotate"
        android:text="正在升级中..."
        android:textSize="18sp"
        android:textColor="#222222"
        android:layout_centerHorizontal="true" />

</RelativeLayout>